<div class="container">
  <div class="row">
    <div class='mx-auto col-11 col-sm-10 col-lg-8 col-xl-6'>
      <h2>プロフィール編集</h2>
      <%= form_with model: @user, url: user_path, method: :patch, local: true do |f| %>
        <div class="field">
          <%= f.label :image, "プロフィール画像" %>
          <%= f.file_field :profile_image, class: "form-control-file user_image", accept: 'image/*' %>
        </div>
        <div class="form-group">
          <%= f.label :name, "ニックネーム" %>
          <%= f.text_field :name, class: "form-control name" %>
        </div>
        <div class="field">
          <%= f.submit "変更を保存する", class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
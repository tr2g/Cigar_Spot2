<div class="container">
  <div class="row">
    <div class='mx-auto col-11 col-sm-10 col-lg-8 col-xl-6'>
      <h2>新規登録</h2>
      <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
        <div class="field">
          <%= f.label :name, "ニックネーム" %><br>
          <%= f.text_field :name, autofocus: true, class: "rounded" %>
        </div>
        <div class="field">
          <%= f.label :birthday, "生年月日" %><br>
          <%= f.date_select :birthday,use_month_numbers: true, start_year: 1930, end_year: (Time.now.year - 20), default: Date.new(1987, 1, 1), class: "rounded" %>
        </div>
        <div class="field">
          <%= f.label :email, "メールアドレス" %><br>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "rounded" %>
        </div>
        <div class="field">
          <%= f.label :password, "パスワード" %><br>
          <%= f.password_field :password, autocomplete: "curren-password", class: "rounded" %>
        </div>
        <div class="field">
          <%= f.label :password_confirmation, "パスワード（確認）" %><br>
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "password_confirm rounded" %>
        </div> <br>
        <div class="field">
          <%= f.submit "登録する", class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>



<h2>Sign up</h2>

<%= form_with model: @user, url: user_registration_path do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

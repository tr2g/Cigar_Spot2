<!DOCTYPE html>
<html>
  <head>
    <title>CigarSpot2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-secondary p-4">
        <div class="container">
          <a class="navbar-brand" href="user_path(current_user)"><%= image_tag 'CS2_logo.png', size: '200x200' %></a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
                <li>
                  <% if current_user.name != "guestuser" %>
                    <%= link_to 'マイページ', user_path(current_user), class: 'link nav-link text-secondary' %>
                  <% end %>
                </li>
                <li>
                  <%= link_to '投稿フォーム', new_comment_path, class: 'link nav-link text-secondary' %>
                </li>
                <li>
                  <%= link_to "ログアウト", destroy_user_session_path, class: 'link nav-link text-secondary', method: :delete %>
                </li>
              <% else %>
                <li>
                  <%= link_to "新規登録", new_user_registration_path, class: 'link nav-link text-secondary' %>
                </li>
                <li>
                  <%= link_to "ログイン", new_user_session_path, class: 'link nav-link text-secondary' %>
                </li>
            <% end %>
          </div>
        </div>
      </nav>
    </header>

    <%= yield %>
  </body>
</html>
